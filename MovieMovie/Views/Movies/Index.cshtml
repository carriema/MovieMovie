@model MovieMovie.ViewModels.MoviesListModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Movies.Count == 0)
{
    <p>Sorry, We have no movie avaliable right now.</p>
} else
{
    <table class="table table-hover table-striped">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        @foreach(var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Detail", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre</td>
            </tr>
        }

    </table>
}

