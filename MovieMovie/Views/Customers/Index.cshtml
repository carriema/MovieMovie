@model MovieMovie.ViewModels.CustomerListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-striped table-hover ">
    <tr>
        <th>Customer</th>
        <th>Membership</th>
        <th>Discount Rate</th>
        
    </tr>
    @{
        foreach (var customer in @Model.Customers)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Detail", "Customers" ,new { id = customer.Id },null)</td>
                <td>@customer.Membership.MembershipType</td>
                <td>@customer.Membership.MembershipDiscount</td>
                
            </tr>
        }
    }
</table>


